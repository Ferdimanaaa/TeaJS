[param]
# fold: tea.*
debug: console clear
build: /usr/local/bin/node $ROOT/build.js
testp: $ROOT/test
plugin: $ROOT/plugin
tml: TeaJS.tmLanguage
teabin: /usr/local/bin/node $ROOT/bin/tea.js
tealib: /usr/local/bin/node $ROOT/lib/index.js

[cmd]
# plugin
cmd: ${tealib} -f $FILE -o ${plugin}/${tml}.json --debug log && plutil -convert xml1 ${plugin}/${tml}.json -o ${plugin}/${tml} && cat ${plugin}/${tml} > ${plugin}/ln.${tml}
watch: plugin\/.*\.tea

[cmd]
cmd: ${build} lib $FILE
watch: src\/.*(?!build|define)\.(js|tea)

[cmd]
cmd: ${teabin} -f $FILE -o $ROOT -v
watch: build\.tea

[cmd]
cmd: ${tealib} -f $FILE -o $FILEDIR
watch: test\/.*\.tea

[cmd]
cmd: ${build} test tmp
watch: test\/.*\.tea

[cmd]
cmd: ${build} test token
watch: src\/(tokens|preprocess)\/.*\.tea

[cmd]
cmd: ${build} test syntax
watch: src\/(syntax)\/.*\.tea

[cmd]
cmd: ${build} test writer
watch: src\/(rewriter)\/(?!sourcemap).*\.tea

[cmd]
cmd: ${tealib} -f $ROOT/test/test_map.tea -o $ROOT/test/test_map.js -j -v -m
watch: src\/rewriter\/sourcemap\.tea|test\/test_map\.tea